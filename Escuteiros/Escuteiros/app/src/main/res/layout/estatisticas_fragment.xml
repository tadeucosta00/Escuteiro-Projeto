<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capturar"
    tools:context=".ui.estatisticas.EstatisticasFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textcor1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#043362"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:text="Pioneiros"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descricao3"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="0dp"
                android:text="0%"
                android:textAlignment="center"
                android:textSize="50dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textcor4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D81212"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:text="Caminheiros"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descricao4"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="0dp"
                android:text="0%"
                android:textAlignment="center"
                android:textSize="50dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textcor3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1EA823"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:text="Exploradores"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descricao2"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="0dp"
                android:text="0%"
                android:textAlignment="center"
                android:textSize="50dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textcor2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#E4CF0F"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:text="Lobitos"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/descricao1"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-black"
                android:paddingTop="0dp"
                android:text="0%"
                android:textAlignment="center"
                android:textSize="50dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>