<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capturar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.catalgo.EditarCatalogoFragment">

    <EditText
        android:id="@+id/Descricao"
        android:layout_width="245dp"
        android:layout_height="254dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/titulo"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="26dp"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/Descricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/botoesredondos"
        android:text="Guardar Alterações"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/botoesredondos"
        android:text="Eliminar Catalogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>