<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capturar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.catalgo.AdicionarCatalogoFragment">

    <EditText
        android:id="@+id/Descricao"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Instruções"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Adicionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="338dp"
        android:layout_height="208dp"
        app:layout_constraintBottom_toTopOf="@+id/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        tools:srcCompat="@mipmap/ic_catalogo_list_foreground" />


    <EditText
        android:id="@+id/titulo"
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_marginBottom="72dp"
        android:hint="Nome Catalogo"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Adicionar"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/botoesredondos"
        android:gravity="center"
        android:text="Adicionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/Descricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>